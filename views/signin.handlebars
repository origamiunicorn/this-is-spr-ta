<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script type="text/javascript" src="js/signup.js"></script>
<script type="text/javascript" src="js/login.js"></script>
<h1> The Good Knight</h1>
<div class="row">
    <div class="col">
        <form name="loginfrm" class="form-signin">
            <img class="mb-4" src="/docs/4.4/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email address"
                required="" autofocus="">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password"
                required="">
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <div style="display: none" id="alert_login" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span> <span class="msg"></span>
            </div>
            <button id="loginbtn" class="waves-effect waves-light btn" type="submit">Login</button>
        </form>
    </div>

    <div class="column">
        <h1>Or Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <form name="signupfrm" class="signup">
            <label for="name"><b>Name</b></label>
            <input type="text" placeholder="Enter Name" id="name" name="name" required>

            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" id="email" name="email" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" id="psw" name="psw" required>

            <label for="psw_repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repeat Password" id="psw_repeat" name="psw_repeat" required>

            <div style="display: none" id="alert_signup" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span> <span class="alert_signup_msg"></span>
            </div>

            <button id="savebtn" class="waves-effect waves-light btn" type="submit">Sign Up</button>
        </form>
    </div>
</div>